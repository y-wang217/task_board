// Navigation
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
  .container
    img.deloite_logo
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='#')
            | Home
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='#') Your Tasks
        li.nav-item
          a.nav-link(href='#') Completed Tasks
        li.nav-item
          button.btn.btn-outline-success#create_task(type='button') Create Task
#create_modal.modal.create_modal
  // Modal content
  .modal-content
    button#create_modal_close(style='float: right;') X
    form(action='#')
      | Are you sure you want to create this task?:
      br
      br
      input#create_task_btn(type='submit' value='Create')
#confirm_modal.modal.confirm_modal
  // Modal content
  .modal-content
    button#confirm_modal_close(style='float: right;') X
    form(action='#')
      | Are you sure you want to accept this task?:
      br
      br
      input#confirm_task_btn(type='submit' value='Submit')

#edit_modal.modal.edit_modal
  // Modal content
  .modal-content
    button#confirm_modal_close(style='float: right;') X
    form(action='#')
      | Are you sure you want to edit this task?:
      br
      br
      input#edit_task_btn(type='submit' value='Submit')

#delete_modal.modal.delete_modal
  // Modal content
  .modal-content
    button#confirm_modal_close(style='float: right;') X
